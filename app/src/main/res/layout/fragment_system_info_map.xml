<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragments.SystemInfoMap">

    <androidx.core.widget.NestedScrollView
        android:background="#00FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:background="#00FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:background="#0000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:divider="@drawable/linearlayout_divider"
                    android:showDividers="end"
                    android:background="#00FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:background="#00FFFFFF"
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generous Information" />


                    <View
                        android:background="#8A8A8A"
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <GridLayout
                        android:rowCount="4"
                        android:columnCount="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_column="0"
                            android:layout_columnSpan="1"
                            android:layout_row="0"
                            android:layout_rowSpan="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Storage Chip:"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:gravity="left"
                            android:layout_gravity="center"
                            android:layout_column="1"
                            android:layout_rowSpan="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="UFS" />

                        <TextView
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_column="0"
                            android:layout_columnSpan="1"
                            android:layout_row="1"
                            android:layout_rowSpan="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Userdata Size:"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:gravity="left"
                            android:layout_row="1"
                            android:layout_gravity="center"
                            android:layout_column="1"
                            android:layout_rowSpan="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="128gb" />

                        <TextView
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_column="0"
                            android:layout_columnSpan="1"
                            android:layout_row="2"
                            android:layout_rowSpan="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Userdata index:"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:gravity="left"
                            android:layout_gravity="center"
                            android:layout_column="1"
                            android:layout_row="2"
                            android:layout_rowSpan="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="sda87" />

                        <TextView
                            android:gravity="right"
                            android:layout_gravity="left"
                            android:layout_column="0"
                            android:layout_columnSpan="1"
                            android:layout_row="3"
                            android:layout_rowSpan="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="System Layout:"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:gravity="left"
                            android:layout_gravity="center"
                            android:layout_column="1"
                            android:layout_row="3"
                            android:layout_rowSpan="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DSU" />


                    </GridLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>